---
import CSSicon from './icons/CSS.astro';
import Bootstrap from './icons/Bootstrap.astro';
import Jquery from './icons/Jquery.astro'

const TAGS = 
    {
        CSS: {
            name: "CSS",
            class: "bg-white/10 text-sky-500",
            icon: CSSicon,
        },
        BOOTSTRAP:{
            name: "Bootstrap",
            class: "bg-white/10 text-violet-600",
            icon: Bootstrap,
        },
        JQUERY:{
            name: "Jquery",
            class: "bg-white/10 text-white",
            icon: Jquery
        }
    }

const PROJECTS = [
{
    title: 'Viajes Chile',
    description: 'Web de viajes, creada con JS',
    link: 'https://el-diegore.github.io/ViajesChile/',
    github: 'https://github.com/El-Diegore/ViajesChile',
    image: './projects/project1.webp',
    tags: [TAGS.CSS, TAGS.BOOTSTRAP, TAGS.JQUERY],
},]
---
{
    PROJECTS.map(({title, description, tags, image}) =>(
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title} </h3>
            <p class="text-lg mb-4 text-pretty">{description} </p>
            <ul class="flex gap-x-2 flex-row mb-3">
                {
                    tags.map((tag)=> (
                        <li>
                            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-4" />
                            {tag.name}
                            </span>
                        </li>
                    ))
                }
            </ul>
            <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`Captura de pantalla del proyecto ${title}`}>
        </article>
    ))

}